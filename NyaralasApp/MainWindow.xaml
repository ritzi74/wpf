<Window x:Class="NyaralasApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cím -->
        <TextBlock Grid.Row="0" Text="Holiday Office"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#F4A300"/>

        <!-- Táblázat -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Bookings}"
                  SelectedItem="{Binding SelectedBooking}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név"
                                    Binding="{Binding Name}" />
                <DataGridTextColumn Header="Összeg (Ft)"
                                    Binding="{Binding Amount, StringFormat=N0}" />
                <DataGridTextColumn Header="Foglalások"
                                    Binding="{Binding BookingCount}" />

                <!-- Műveletek oszlop: szerkesztés / törlés ikon gombokkal -->
                <DataGridTemplateColumn Header="Műveletek" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button Width="24" Height="24" Margin="2"
                                        Command="{Binding DataContext.EditBookingCommand,
                                                          RelativeSource={RelativeSource AncestorType=Window}}">
                                    <Path Data="M3,17 L3,21 7,21 17,11 13,7 z"
                                          Fill="Black"/>
                                </Button>
                                <Button Width="24" Height="24" Margin="2"
                                        Command="{Binding DataContext.DeleteBookingCommand,
                                                          RelativeSource={RelativeSource AncestorType=Window}}">
                                    <Path Data="M3,6 L5,6 6,5 10,5 11,6 13,6 13,8
                                                3,8 z M4,9 L12,9 11,19 5,19 z"
                                          Fill="Black"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Új foglalás gomb alul középen -->
        <Button Grid.Row="2"
                Content="Új foglalás hozzáadása"
                Width="200" Height="40"
                HorizontalAlignment="Center"
                Command="{Binding AddBookingCommand}"/>
    </Grid>
</Window>
